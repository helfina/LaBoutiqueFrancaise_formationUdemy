{% extends 'base.html.twig' %}

{% block title %}{{products.name}} - La Boutique Française{% endblock %}

{% block content %}
    <h1>{{products.name}} </h1>

    <div class="row ">
        <div class="col-md-5">
            <img src="images/{{products.illustration}}" alt="{{ products.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ products.name }}</h3>
            <p>{{ products.subtitle }}</p>
            <span class="product-page-price">{{ (products.price / 100) | number_format(2,',', '.')  }}€</span>
            <hr>
            <p>{{ products.description }}</p>
            <a href="" class="btn btn-primary">Ajouter au panier</a>
        </div>
        
    </div>


{% endblock %}